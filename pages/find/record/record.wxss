.remark{
  font-size: 30rpx;
  width: 686rpx;
  padding: 40rpx 0 0 20rpx;
  line-height: 50rpx;
  height: 100rpx;
  color: #333333;
}
.date{margin: 30rpx 0;padding-left: 20rpx;font-size: 28rpx;color: #999;}
.remove{width: 74rpx;height: 74rpx;display: block;position: absolute;top: 0;right: 0;}
.time{
  font-size: 28rpx;
  color: #999;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.main{
  padding: 0 30rpx;
  width: 720rpx;
  flex-wrap: wrap;
}
.m1{
  width: 210rpx;
  height: 210rpx;
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.mimg{
  width: 210rpx;
  height: 210rpx;
  display: block;
  border-radius: 4rpx;
}
.title{
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 24rpx;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fffefe;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 10rpx;
  text-align: center;
}
.add{
  width: 224rpx;
  height: 224rpx;
  border: 2rpx solid #dcdcdc;
  border-radius: 4px;
  color: #dcdcdc;
  font-weight: 700;
  font-size: 50rpx;
  text-align: center;
  line-height: 224rpx;
}
.save{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color:#5fcb3d; 
  text-align: center;
  position: fixed;
  bottom: 0;
  font-size: 32rpx;
}
.forbottom{height: 80rpx;}